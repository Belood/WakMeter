<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.wakfu</groupId>
    <artifactId>WakMeter</artifactId>
    <version>1.0.0-SNAPSHOT</version>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <javafx.version>21</javafx.version>
        <!-- Ajustez ce chemin localement si nÃ©cessaire (chemin vers le dossier lib du SDK JavaFX) -->
        <javafx.sdk.path>D:\Java\javafx-sdk-21\lib</javafx.sdk.path>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
            <version>${javafx.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-fxml</artifactId>
            <version>${javafx.version}</version>
        </dependency>
        <!-- Jackson pour le traitement JSON -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>2.15.2</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.datatype</groupId>
            <artifactId>jackson-datatype-jsr310</artifactId>
            <version>2.15.2</version>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>RELEASE</version>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>0.0.8</version>
                <configuration>
                    <mainClass>com.wakfu.WakfuMeterApp</mainClass>
                </configuration>
            </plugin>

            <!-- GÃ©nÃ¨re un jar exÃ©cutable avec toutes les dÃ©pendances (uber-jar) -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <createDependencyReducedPom>false</createDependencyReducedPom>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>com.wakfu.WakfuMeterApp</mainClass>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- ...existing code... -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>3.1.0</version>
                <!-- NOTICE: this execution has been moved into the `jpackage` profile below to avoid requiring jlink on every build -->
            </plugin>

            <!-- Launch4j: Creates Windows executable (.exe) from JAR -->
            <plugin>
                <groupId>com.akathist.maven.plugins.launch4j</groupId>
                <artifactId>launch4j-maven-plugin</artifactId>
                <version>2.5.2</version>
                <executions>
                    <execution>
                        <id>create-windows-exe</id>
                        <phase>package</phase>
                        <goals>
                            <goal>launch4j</goal>
                        </goals>
                        <configuration>
                            <headerType>gui</headerType>
                            <outfile>${project.build.directory}/WakMeter.exe</outfile>
                            <jar>${project.build.directory}/${project.build.finalName}.jar</jar>
                            <mainClass>com.wakfu.WakfuMeterApp</mainClass>
                            <errTitle>WakMeter Error</errTitle>
                            <icon>src/main/resources/assets/icon.ico</icon>
                            <jre>
                                <minVersion>21</minVersion>
                                <opts>
                                    <opt>-Xmx512m</opt>
                                </opts>
                            </jre>
                            <versionInfo>
                                <fileVersion>1.0.0.0</fileVersion>
                                <txtFileVersion>${project.version}</txtFileVersion>
                                <fileDescription>WakMeter - Wakfu Damage Meter</fileDescription>
                                <copyright>Wakfu</copyright>
                                <productVersion>1.0.0.0</productVersion>
                                <txtProductVersion>${project.version}</txtProductVersion>
                                <productName>WakMeter</productName>
                                <internalName>WakMeter</internalName>
                                <originalFilename>WakMeter.exe</originalFilename>
                            </versionInfo>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

    <!-- Profil dÃ©diÃ© Ã  la crÃ©ation d'un runtime et d'un installateur via jlink + jpackage -->
    <profiles>
        <profile>
            <id>jpackage</id>
            <build>
                <plugins>
                    <!-- jlink: gÃ©nÃ¨re un runtime minimal (custom-runtime) -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>3.1.0</version>
                        <executions>
                            <execution>
                                <id>create-custom-runtime</id>
                                <phase>package</phase>
                                <configuration>
                                    <target>
                                        <echo>ðŸ§© GÃ©nÃ©ration dâ€™un runtime minimal via jlink...</echo>
                                        <exec executable="jlink">
                                            <arg value="--module-path"/>
                                            <!-- Utilise la propriÃ©tÃ© configurable javafx.sdk.path -->
                                            <arg value="${javafx.sdk.path}"/>

                                            <arg value="--add-modules"/>
                                            <arg value="java.base,javafx.controls,javafx.fxml,javafx.graphics"/>
                                            <arg value="--strip-debug"/>
                                            <arg value="--no-header-files"/>
                                            <arg value="--no-man-pages"/>
                                            <arg value="--output"/>
                                            <arg value="${project.build.directory}/custom-runtime"/>
                                        </exec>
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <!-- jpackage: crÃ©e un .exe Windows en utilisant le runtime gÃ©nÃ©rÃ© ci-dessus -->
                    <plugin>
                        <groupId>org.panteleyev</groupId>
                        <artifactId>jpackage-maven-plugin</artifactId>
                        <version>1.5.2</version>
                        <executions>
                            <execution>
                                <id>create-exe</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>jpackage</goal>
                                </goals>
                                <configuration>
                                    <name>WakMeter</name>
                                    <appVersion>${project.version}</appVersion>
                                    <vendor>Wakfu</vendor>
                                    <type>exe</type>
                                    <input>${project.build.directory}</input>
                                    <dest>${project.build.directory}/installer</dest>
                                    <mainJar>${project.build.finalName}-shaded.jar</mainJar>
                                    <mainClass>com.wakfu.WakfuMeterApp</mainClass>
                                    <runtimeImage>${project.build.directory}/custom-runtime</runtimeImage>
                                    <icon>src/main/resources/assets/icon.ico</icon>
                                    <!-- options supplÃ©mentaires si besoin -->
                                    <jvmArgs>
                                        <jvmArg>-Xmx512m</jvmArg>
                                    </jvmArgs>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>